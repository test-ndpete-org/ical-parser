<?xml version="1.0"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
    <display-name>iCal-Parser REST service</display-name>

    <servlet>
        <description>Main Jersey REST Application</description>
        <display-name>REST Application</display-name>
        <servlet-name>rest</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
	    <init-param>
		    <param-name>com.sun.jersey.config.property.packages</param-name>
		    <param-value>edu.byu.mobile.ical.rest</param-value>
	    </init-param>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <description>ICal parsing Rest service</description>

    <context-param>
        <param-name>log4jExposeWebAppRoot</param-name>
        <param-value>false</param-value>
    </context-param>

    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/classes/log4j.properties</param-value>
    </context-param>

    <context-param>
        <param-name>disable-cache</param-name>
        <param-value>false</param-value>
    </context-param>

    <servlet-mapping>
        <servlet-name>rest</servlet-name>
        <url-pattern>/rest/v1/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <filter>
        <filter-name>cache-filter</filter-name>
        <filter-class>net.sf.ehcache.constructs.web.filter.SimpleCachingHeadersPageCachingFilter</filter-class>
    </filter>

    <filter>
        <filter-name>skip-cache-filter</filter-name>
        <filter-class>edu.byu.mobile.ical.rest.SkipCacheFilter</filter-class>
        <init-param>
            <param-name>skipCacheParam</param-name>
            <param-value>skip-cache</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>skip-cache-filter</filter-name>
        <servlet-name>rest</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>cache-filter</filter-name>
        <servlet-name>rest</servlet-name>
    </filter-mapping>

</web-app>
